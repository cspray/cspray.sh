#!/bin/bash

source ./functions.sh
source ./packages.sh

echo "Installing packages from official repositories..."
sudo pacman -Sy --noconfirm --noprogressbar --needed ${pacman_packages[*]} &> /dev/null
echo -ne "\033[2K"
echo -ne "\033[1A"
echo -ne "\033[34C"
print_success_mark

echo "Installing packages from AUR... "
yay -Sy --noconfirm --noprogressbar --needed ${aur_packages[*]} &> /dev/null
